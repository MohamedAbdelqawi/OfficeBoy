
@{
    ViewData["Title"] = "Search";
}

<style>
 
    form {
        width: 60%;
        margin: 0 auto; 
        font-family: Arial, sans-serif; 
    }

   
    .form-group {
        margin-bottom: 20px;
    }

    label {
        color: #113f67; 
        font-weight: bold; 
    }

    input[type="text"],
    input[type="date"] {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

   
    button {
        padding: 10px 20px;
        font-size: 18px;
        background-color: #4caf50;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        
        button:hover {
            background-color: #45a049;
        }
</style>

<h1 style="text-align: center; color: #4caf50;">Employee Orders</h1>

<form asp-controller="Payment" asp-action="Search" method="post">
    <div class="form-group">
        <label for="searchText">Employee ID or Email:</label>
        <input type="text" id="searchText" name="searchText" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="fromDate">From Date:</label>
        <input type="date" id="fromDate" name="fromDate" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="toDate">To Date:</label>
        <input type="date" id="toDate" name="toDate" class="form-control" required />
    </div>

    <div class="form-group">
        
            <input type="checkbox" id="EmployeeOrder" name="EmployeeOrder" class="form-check-input">
            <label class="form-check-label" for="EmployeeOrder">Employee Order</label>
       
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
</form>
