@using DataLayer.ViewModels
@model ManageUserRolesViewModel

<form asp-action="ManageUserRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <h4>UserName: @Model.UserName</h4>
    
    
    <div class="form-group">
        <table class="table">
            <thead>
                <tr>
                    <th>Role</th>
                    <th>Assign</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model.AllRoles)
                {
                    <tr>
                        <td>@role</td>
                        <td>
                            <div class="form-check">
                                <input type="checkbox" name="SelectedRoles" value="@role" class="form-check-input" @(Model.UserRoles.Contains(role) ? "checked" : "") />
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <button type="submit" class="btn btn-primary">Update Roles</button>
</form>
